                    <ListView x:Name="MessageList" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock Foreground="{Binding Converter={StaticResource ColorConverter}}" Text="{Binding SenderPlayerId, Converter={StaticResource MessageOwnerConverter}}" />

                                    <TextBlock
                                        Grid.Row="1"
                                        Margin="0,5,0,0"
                                        Foreground="Black"
                                        Text="{Binding Message}"
                                        TextWrapping="Wrap" />

                                    <TextBlock
                                        Grid.Row="2"
                                        HorizontalAlignment="Right"
                                        Text="{Binding Timestamp, Converter={StaticResource TimestampConverter}}" />

                                    <Rectangle
                                        Grid.Row="3"
                                        Height="0.8"
                                        Margin="0,10,0,0"
                                        HorizontalAlignment="Stretch"
                                        Fill="#ECECEC" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                    <Grid
                        Grid.Row="1"
                        Margin="5"
                        VerticalAlignment="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            x:Name="EdtMessage"
                            Grid.Column="0"
                            materialDesign:HintAssist.Hint="Write a message"
                            materialDesign:HintAssist.IsFloating="True" />
                        <Button
                            IsDefault="True"
                            Grid.Column="1"
                            Margin="10,0,0,-10"
                            Click="SendMessage_Click"
                            Content="Send"
                            Style="{DynamicResource MaterialDesignFlatButton}" />
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <materialDesign:DialogHost
            IsOpen="{Binding IsShowDialog}">
            <materialDesign:DialogHost.DialogContent>
                <Grid Margin="40 15 40 15" MinWidth="100" MinHeight="100">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="TxtDialogTitle" Text="You Win!" HorizontalAlignment="Center" FontSize="15" FontWeight="DemiBold"/>
                    <Grid Grid.Row="1" VerticalAlignment="Center" Margin="0 0 0 10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="TxtDialogMessage" Text="Hello" FontSize="13" HorizontalAlignment="Center" FontWeight="DemiBold"/>

                    </Grid>
                    <Button  x:Name="DialogButton" Click="DialogButton_Click" Grid.Row="2" Content="Exit" Style="{DynamicResource MaterialDesignFlatButton}" VerticalAlignment="Bottom"/>
                </Grid>
            </materialDesign:DialogHost.DialogContent>
            <!--  put the content over which the dialog is shown here (e.g. your main window grid)  -->
        </materialDesign:DialogHost>

        <materialDesign:Snackbar
            x:Name="Snackbar"
            Grid.Column="2"
            Margin="0"
            Padding="0"
            VerticalAlignment="Bottom"
            IsActive="{Binding IsActiveSnackBar}">
            <materialDesign:SnackbarMessage x:Name="SnackbarMessage" />
        </materialDesign:Snackbar>

    </Grid>
</local:BaseWindow>
